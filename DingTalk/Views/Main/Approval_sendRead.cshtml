@{
    Layout = null;
}

<!--右侧实体内容-->
<el-main id="partPage" style="position:relative;">
    <div class="head-fixed" onclick="loadPage('/Main/approval')">
        <i class="el-icon-arrow-left"></i>
        文件阅办单审批-{{nodeInfo.NodeName}}
    </div>
    <el-form id="formImg" :model="tableForm" :rules="rules" :inline="true" ref="ruleForm" label-width="120px" class="demo-ruleForm">
        <el-form-item label="标题">
            <el-input v-model="ruleForm.Title" style="width:300px;" :disabled="true"></el-input>
        </el-form-item>
        <el-form-item label="申请人">
            <el-input v-model="ruleForm.ApplyMan" style="width:200px;" :disabled="true"></el-input>
        </el-form-item>

        <el-form-item label="来文单位">
            <el-input v-model="tableForm.ReceivingUnit" style="width:500px;" :disabled="true"></el-input>
        </el-form-item>

        <el-form-item label="文件文号">
            <el-input v-model="tableForm.FileNo" style="width:500px;" :disabled="true"></el-input>
        </el-form-item>

        <el-form-item label="收文时间">
            <el-date-picker v-model="tableForm.ReceivingTime" :disabled="true"
                            value-format="yyyy-MM-dd"
                            type="date"
                            placeholder="选择日期">
            </el-date-picker>
        </el-form-item>

        <el-form-item label="主要内容">
            <el-input v-model="tableForm.MainIdea" type="textarea" :row="5" style="width:600px;" :disabled="true" :autosize="{ minRows: 4, maxRows: 6}"></el-input>
        </el-form-item>

        <!--相关文件-->
        <el-form-item v-if="fileList.length > 0" label="相关文件">
            <el-card class="box-card">
                <div v-for="f in fileList" :key="f.name" class="text item">
                    <span>{{ f.name }}</span>
                    <el-button size="mini" type="primary" v-on:click="downloadFile(f.mediaId)">下载</el-button>
                </div>
            </el-card>
        </el-form-item>

        <el-form-item label="拟办意见" prop="Suggestion">
            <el-input v-model="tableForm.Suggestion" type="textarea" :row="5" style="width:500px;" :disabled="NodeId > 1"></el-input>
        </el-form-item>

        <hr />

        <template v-if="NodeId >= 3">
            <el-form-item label="领导阅示" prop="Leadership">
                <el-input v-model="tableForm.Leadership" type="textarea" :row="5" style="width:500px;" :disabled="NodeId>3"></el-input>
            </el-form-item>
        </template>

        <!--添加审批人-->
        <sam-approver-list :nodeList="nodeList" :single="false" :nodedata="nodeInfo"></sam-approver-list>
        <template v-if="index==0">
            <el-form-item label="建议">
                <el-input v-model="ruleForm.Remark" style="width:500px;"></el-input>
            </el-form-item>
            <el-form-item label="操作">
                <el-button type="primary" v-on:click="onSubmit('ruleForm')" :disabled="disablePage">同意</el-button>
                <el-button v-show="nodeInfo.IsBack" type="warning" v-on:click="returnBk()">退回</el-button>
            </el-form-item>
        </template>
        <template v-if="index==2">
            <el-form-item v-if="state=='未完成'">
                <ding :dinglist="dingList"></ding>
                <el-button type="warning" v-on:click="rebackSubmit" :disabled="disablePage">撤回</el-button>
            </el-form-item>
            <el-form-item v-else>
                <el-button type="primary" v-on:click="print" :disabeld="disablePage">打印</el-button>
            </el-form-item>
        </template>
    </el-form>

</el-main>

