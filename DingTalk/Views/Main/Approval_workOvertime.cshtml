@{
    Layout = null;
}

<!--右侧实体内容-->
<el-main id="partPage" style="position:relative;">
    <div class="head-fixed" onclick="loadPage('/Main/approval')">
        <i class="el-icon-arrow-left"></i>
        基地加班审批-{{nodeInfo.NodeName}}
    </div>
    <el-form :model="tableForm" :rules="rules" :inline="true" ref="ruleForm" label-width="120px" class="demo-ruleForm">

        <el-form-item label="标题">
            <el-input v-model="ruleForm.Title" :disabled="true" style="width:90%;"></el-input>
        </el-form-item>
        <el-form-item label="加班事由" prop="OverTimeContent">
            <el-input v-model="tableForm.OverTimeContent" :disabled="true" style="width:90%;"></el-input>
        </el-form-item>

        <hr />

        <el-form-item label="加班日期" prop="DateTime">
            <div class="block">
                <el-date-picker v-model="tableForm.DateTime" :disabled="true"
                                type="date"
                                value-format="yyyy-MM-dd"
                                placeholder="选择日期"
                                align="right">
                </el-date-picker>
            </div>
        </el-form-item>


        <el-form-item label="加班时间" prop="StartTime">
            <el-time-select placeholder="起始时间" :disabled="true"
                            v-model="tableForm.StartTime"
                            :picker-options="{
                              start: '08:30',
                              step: '00:30',
                              end: '18:30',
                              maxTime: ruleForm.EndTimeTime
                            }">
            </el-time-select>
            <el-time-select placeholder="结束时间" :disabled="true"
                            v-model="tableForm.EndTimeTime"
                            :picker-options="{
                              start: '08:30',
                              step: '00:30',
                              end: '23:30',
                              minTime: ruleForm.StartTime
                            }">
        </el-form-item>
        <el-form-item label="加班时长(小时)">
            <el-input v-model="tableForm.UseTime" style="width:200px;" :disabled="true"></el-input>
        </el-form-item>
        <hr />

        <template v-if="reInput">
            <el-form-item label="有效加班时长(小时)" prop="EffectiveTime">
                <el-input v-model="tableForm.EffectiveTime" style="width:550px;" :disabled="disabledRemark"></el-input>
            </el-form-item>
        </template>

        <el-form-item label="意见">
            <el-input v-model="ruleForm.Mark" style="width:550px;" :disabled="disabledRemark"></el-input>
        </el-form-item>

        <hr />

        <!--添加审批人-->
        <sam-approver-list :nodeList="nodeList" :single="true" :nodedata="nodeInfo"></sam-approver-list>
        <el-form-item label="操作" v-if="index==0">
            <el-button type="primary" v-on:click="onSubmit('ruleForm')" :disabled="disablePage">同意</el-button>
            <el-button v-show="nodeInfo.IsBack" type="warning" v-on:click="returnBk()">退回</el-button>
        </el-form-item>
        <template v-if="index==2 &&( state=='被退回' || state=='已撤回')">
            <el-form-item>
                <el-button type="primary" v-on:click="reApproval" :disabled="disablePage">重新发起</el-button>
            </el-form-item>
        </template>
        <template v-if="index==2 && state=='未完成'">
            <el-form-item>
                <ding :dinglist="dingList"></ding>
                <el-button type="warning" v-on:click="rebackSubmit" :disabled="disablePage">撤回</el-button>
            </el-form-item>
        </template>
    </el-form>
</el-main>

<script>
    if (UrlObj.flowid) {
        FlowId = UrlObj.flowid
        NodeId = UrlObj.nodeid
        TaskId = UrlObj.taskid
        state = UrlObj.state
        Id = UrlObj.id
        Index = UrlObj.index
    }
    var demo = new Vue({
        el: "#partPage",
        mixins: [mixin],
        data: function () {
            return {
                index: Index,
                state: state,
                nodeList: [],
                nodeInfo: {},
                reInput: false,
                disabledRemark: false,
                tableForm: {},
                ruleForm: {

                }
            }
        },
        methods: {
            onSubmit(formName) {
                var that = this
                this.$refs[formName].validate((valid) => {
                    if (valid) {
                        let url = '/OverTimeTable/OverTimeTableModify'
                        var param = _cloneObj(this.tableForm)
                        param.UseKilometres = this.UseKilometres
                        that._postData(url, function () {
                            that.aggreSubmit({
                                "Id": that.ruleForm.Id,
                                "Remark": that.ruleForm.Mark
                            })

                        }, param)
                    }
                })
            },
            getTable() {
                var that = this
                that._getData('/OverTimeTable/OverTimeTableQuary', function (data2) {
                    that.tableForm = data2
                    if (!data2.EffectiveTime) that.tableForm['EffectiveTime'] = ''
                }, { TaskId: TaskId })
            }
        },
        created: function () {
            this.getTable()
            if (NodeId == '1' || NodeId == '2') this.reInput = true
            if (NodeId == '2' || Index > 0) this.disabledRemark = true
            loadHtml("mainPage", "partPage")
        }
    })
    getFormData(demo)

</script>



